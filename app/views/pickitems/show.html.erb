<h1>アイテム詳細</h1>

<table>
  <tbody>
    <tr>
      <th scope='col'>グループ</th>
      <td class="data"><%= @pickitem.pickgroup %></td>
      <th scope='col'>棚番</th>
      <td class="data"><%= "#{@pickitem.tana[1..2]}-#{@pickitem.tana[3..4]}-#{@pickitem.tana[5..6]}" %></td>
    </tr>
    <tr>
      <th scope='col'>JAN4</th>
      <td class="data"><%= @pickitem.jan[-4..-1] %></td>
      <th scope='col'>商品名</th>
      <td class="data_shohinmei"><%= @pickitem.shohinmei %></td>
    </tr>
    <tr>
      <th scope='col'>入数</th>
      <td class="data"><%= @pickitem.mklot %></td>
      <th scope='col'>数量</th>
      <td class="data_pick">
        <%= form_with(model: @pickitem, local: true, class: "form_shipping_records") do |f| %>
          <%= f.hidden_field :pickitem_id, value: @pickitem.id %>
          <%= f.text_field :shipping_records, placeholder:@pickitem.totalpick, class: "shipping_records-input", autofocus: true %>
          <%= f.submit "完了", class: "shipping_records-submit", id:"submit_btn" %>
          <%= audio_tag("sound1.mp3",id:"sounds", preload:"auto") %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= button_to "戻る", pickitems_path, method: :post, params: { shipper: @pickitem.shipper, pickgroup: @pickitem.pickgroup }, class: "btn btn-primary" %>
<div><% @pickitem.shipper %></div>
<div><% @pickitem.pickgroup %></div>